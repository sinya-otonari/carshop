<p id="notice"><%= notice %></p>

<h1>販売一覧</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>社員名</th>
      <th>車名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.date %></td>
        <td><%= sale.employee.name %></td>
        <td><%= sale.car.name %></td>
        <td><%= link_to '詳細', sale %></td>
        <td><%= link_to '編集', edit_sale_path(sale) %></td>
        <td><%= link_to '削除', sale, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

